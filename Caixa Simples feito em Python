
controle=int
controle=1


while(controle!=0):
    print("1 - XEROX R$ 0,25 ");
    print("2 - IMPRESSÃO R$ 1,00 ");
    print("3 - FOTO R$ 3,50 ");
    print("4 - CURRÍCULO R$ 3,00 ");
    print("5 - OPEÇÃOES ONLINE -R$ 5,00 ");
    print("6 - OPERAÇÃO ESPECIAL - DEFINA O VALOR");
    produto = int(input("Informe o produto desejado, pressione enter em seguida \n"))
    if (produto == 1):
        print("XEROX R$ 0,25 \n")
        valor = float
        valor = 0.25
        qtd = float(input("Informe a quantidade, pressione enter em seguida \n"))
        caculofinal = float
        caculofinal = (qtd * valor)
        print("O valor total é de: R$ %.2f " % (caculofinal))
        troco = float((input("Informe o dinheiro recebido, pressione enter em seguida \n")))
        trocoope = (troco - caculofinal)
        print("O troco é de R$ %.2f" % (trocoope))
    elif(produto==2):
        print("IMPRESSÃO R$ 1,00 \n")
        valor=1.00
        qtd = float(input("Informe a quantidade, pressione enter em seguida \n"))
        caculofinal = float
        caculofinal = (qtd * valor)
        print("O valor total é de: R$ %.2f " % (caculofinal))
        troco = float((input("Informe o dinheiro recebido, pressione enter em seguida \n")))
        trocoope = (troco - caculofinal)
        print("O troco é de R$ %.2f" % (trocoope))
    elif(produto==3):
        print("FOTO R$ 3,00 \n")
        valor=3.00
        qtd = float(input("Informe a quantidade, pressione enter em seguida \n"))
        caculofinal = float
        caculofinal = (qtd * valor)
        print("O valor total é de: R$ %.2f " % (caculofinal))
        troco = float((input("Informe o dinheiro recebido, pressione enter em seguida \n")))
        trocoope = (troco - caculofinal)
        print("O troco é de R$ %.2f" % (trocoope))
    elif(produto==4):
        print("CURRÍCULO R$3,00 \n")
        valor=3.00
        qtd = float(input("Informe a quantidade, pressione enter em seguida \n"))
        caculofinal = float
        caculofinal = (qtd * valor)
        print("O valor total é de: R$ %.2f " % (caculofinal))
        troco = float((input("Informe o dinheiro recebido, pressione enter em seguida \n")))
        trocoope = (troco - caculofinal)
        print("O troco é de R$ %.2f" % (trocoope))
    elif(produto==5):
        print("OPERAÇÕES ONLINE R$ 5,00")
        valor=5.00
        qtd = float(input("Informe a quantidade, pressione enter em seguida \n"))
        caculofinal = float
        caculofinal = (qtd * valor)
        print("O valor total é de: R$ %.2f " % (caculofinal))
        troco = float((input("Informe o dinheiro recebido, pressione enter em seguida \n")))
        trocoope = (troco - caculofinal)
        print("O troco é de R$ %.2f" % (trocoope))
    elif(produto==6):
        print("OPERAÇÃO ESPECIAL - Defina o Valor: \n")
        qtd=float(input("Informe a quantidade, pressione enter em seguida \n"))
        valor=float(input("Inoforme o valor unitário, pressione enter em seguida \n"))
        total=(qtd*valor)
        print("O valor total foi de R$ %.2f"%(total))
        recebido=float(input("Informe o valor recebido, pressione enter em seguida \n"))
        troco=(recebido-total)
        print("O valor do troco de R$ %.2f"%(troco))

    controle=int(input("Infome 1 para continuar a rotina, informe 0 para encerrar esta rotina ...  \n"))
